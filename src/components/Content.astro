---
const { lang = 'en' } = Astro.props;
import "../styles/globals.css";
import { t } from "../i18n";
---

<section id="hero-banner">
    <div class="grid grid-cols-1 lg:grid-cols-2 place-items-center p-5 md:p-10">
        <!-- Columna 1 -->
        <div class="grid gap-6 md:gap-4 content-herobanner">
            <div class="bg-tagline p-3 rounded-full w-72 text-center font-bold mb-4">
                { t(lang, 'hero.tagline') }
            </div>
            <h1 class="text-5xl font-bold mb-2 main-title">{ t(lang, 'hero.title1') }</h1>
            <p class="text-lg">{ t(lang, 'hero.description') }</p>
            <div class="flex gap-6 md:gap-5 justify-center md:justify-start img-cta">
                <a>
                    <img src="/images/content/very-soon.webp" alt="Download on Google Play" class="PlayStore Icon">
                </a>
                <a href="https://apps.apple.com/us/app/pray-time-7/id6754796869" target="_blank">
                    <img src="/images/content/app-store.webp" alt="AppStore Icon">
                </a>
            </div>
            <div class="flex gap-3 mt-3">
                <img src="/images/content/secure-svg.svg" alt="Secure Icon" class="w-4">
                <p class="text-base">{ t(lang, 'hero.advice') }</p>
            </div>
        </div>
        <!-- Columna 2 -->
        <div class="max-w-98">
            <img src="/images/content/cellphone.webp" alt="Cellphone Image">
        </div>
    </div>
</section>

<section id="features" class="py-16 md:mt-16">
    <div class="px-8 lg:px-px">
        <div class="text-center">
            <h1 class="text-white text-5xl mb-4 font-inter font-bold">{ t(lang, 'features.title') }</h1>
            <p class="text-lg">{ t(lang, 'features.subtitle') }</p>
        </div>
        <div class="flex flex-wrap gap-14 items-start justify-center sm:px-6 md:px-10 lg:px-20 xlg:px-40 mt-16">
            <div class="flex flex-col bg-[#151B2B] shadow-sm border border-[#151B2B] hover:border-[#00B4D8] hover:shadow-md rounded-lg transition-all cursor-pointer sm:w-30 md:w-96 p-6">
                <img class="mb-2 w-10" src="/images/content/clock.svg" alt="Clock Icon">
                <h5 class="mb-2 text-white text-xl font-semibold">
                    { t(lang, 'features.card1-title') }
                </h5>
                <p class="text-white leading-normal font-light">
                    { t(lang, 'features.card1-desc') }
                </p>
            </div>
            <div class="flex flex-col bg-[#151B2B] shadow-sm border border-[#151B2B] hover:border-[#00B4D8] hover:shadow-md rounded-lg transition-all cursor-pointer sm:w-30 md:w-96 p-6">
                <img class="mb-2 w-10" src="/images/content/phone.svg" alt="Phone Icon">
                <h5 class="mb-2 text-white text-xl font-semibold">
                    { t(lang, 'features.card2-title') }
                </h5>
                <p class="text-white leading-normal font-light">
                    { t(lang, 'features.card2-desc') }
                </p>
            </div>
            <div class="flex flex-col bg-[#151B2B] shadow-sm border border-[#151B2B] hover:border-[#00B4D8] hover:shadow-md rounded-lg transition-all cursor-pointer sm:w-30 md:w-96 p-6">
                <img class="mb-2 w-10" src="/images/content/not.svg" alt="Notification Icon">
                <h5 class="mb-2 text-white text-xl font-semibold">
                    { t(lang, 'features.card3-title') }
                </h5>
                <p class="text-white leading-normal font-light">
                    { t(lang, 'features.card3-desc') }
                </p>
            </div>
            <div class="flex flex-col bg-[#151B2B] shadow-sm border border-[#151B2B] hover:border-[#00B4D8] hover:shadow-md rounded-lg transition-all cursor-pointer sm:w-30 md:w-96 p-6">
                <img class="mb-2 w-10" src="/images/content/bell.svg" alt="Bell Icon">
                <h5 class="mb-2 text-white text-xl font-semibold">
                    { t(lang, 'features.card4-title') }
                </h5>
                <p class="text-white leading-normal font-light">
                    { t(lang, 'features.card4-desc') }
                </p>
            </div>
            <div class="flex flex-col bg-[#151B2B] shadow-sm border border-[#151B2B] hover:border-[#00B4D8] hover:shadow-md rounded-lg transition-all cursor-pointer sm:w-30 md:w-96 p-6">
                <img class="mb-2 w-10" src="/images/content/privacy.svg" alt="Privacy Icon">
                <h5 class="mb-2 text-white text-xl font-semibold">
                    { t(lang, 'features.card5-title') }
                </h5>
                <p class="text-white leading-normal font-light">
                    { t(lang, 'features.card5-desc') }
                </p>
            </div>
        </div>
    </div>
</section>

<section id="about-praytime" class="py-16 md:py-0">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 place-items-center p-8 md:p-20">
            <div class="img-pray">
                <img class="" src="/images/content/hands-pray.webp" alt="About Pray Time Image">
            </div>
            <div class="grid gap-4">
                <h1 class="text-white text-4xl font-bold mb-2">{ t(lang, 'about.title') }</h1>
                <p class="opacity-85 text-lg about-desc">{ t(lang, 'about.description') }</p>
                </p>
                <div class="grid gap-1">
                    <div class="flex justify-start mt-5">
                        <img class="text-1x1" src="/images/content/check.svg" alt="Item Check Icon">
                        <h2 class="ml-2 font-semibold text-2xl">{ t(lang, 'about.detail1-title') }</h2>
                    </div>
                    <p class="ml-8 item-about-desc">
                        { t(lang, 'about.detail1-desc') }
                    </p>
                </div>
                <div class="grid gap-1">
                    <div class="flex justify-start mt-5">
                        <img class="text-1x1" src="/images/content/check.svg" alt="Item Check Icon">
                        <h2 class="ml-2 font-semibold text-2xl">{ t(lang, 'about.detail2-title') }</h2>
                    </div>
                    <p class="ml-8 item-about-desc">
                        { t(lang, 'about.detail2-desc') }
                    </p>
                </div>
                <div class="grid gap-1">
                    <div class="flex justify-start mt-5">
                        <img class="text-1x1" src="/images/content/check.svg" alt="Item Check Icon">
                        <h2 class="ml-2 font-semibold text-2xl">{ t(lang, 'about.detail3-title') }</h2>
                    </div>
                    <p class="ml-8 item-about-desc">
                        { t(lang, 'about.detail3-desc') }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="download">
    <div class="last-section grid grid-cols-1 lg:grid-cols-2 gap-8 place-items-center p-8 md:p-16">
        <div class="grid gap-2 content-cta">
            <h2 class="text-white text-4xl md:text-5xl font-bold mb-2 cta-title">{ t(lang, 'download.title') }</h2>
            <p class="text-xl">
                {t(lang, 'download.description')}
            </p>
            <div class="flex gap-3 justify-start mt-2">
                <img src="/images/content/secure-svg.svg" alt="Secure Icon" class="mt-1">
                <p class="mt-1 text-lg">{ t(lang, 'download.shield') }</p>
            </div>
        </div>
        <div class="flex gap-6 justify-center img-cta">
            <a>
                <img src="/images/content/very-soon.webp" alt="Download on Google Play" class="PlayStore Icon">
            </a>
            <a href="https://apps.apple.com/us/app/pray-time-7/id6754796869" target="_blank">
                <img src="/images/content/app-store.webp" alt="AppStore Icon">
            </a>
        </div>
    </div>
</section>